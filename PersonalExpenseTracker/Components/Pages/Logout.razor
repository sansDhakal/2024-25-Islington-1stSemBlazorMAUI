@page "/logout"
@using PersonalExpenseTracker.Services
@inject NavigationManager NavigationManager
@inject AuthenticationStateService AuthenticationStateService

<h3 style="text-align: center; color: #007bff; margin-top: 30px; font-size: 2rem;">Logout</h3>

<div style="max-width: 500px; margin: 50px auto; padding: 30px; background-color: #ffffff; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1); text-align: center;">
    <p style="font-size: 18px; color: #333; margin-bottom: 30px;">Are you sure you want to logout?</p>

    <div style="display: flex; justify-content: center; gap: 20px;">
        <button class="btn btn-primary" @onclick="HandleLogout" style="padding: 14px 30px; font-size: 16px; background-color: #007bff; color: white; border: none; border-radius: 8px; cursor: pointer; transition: background-color 0.3s;">
            Yes
        </button>

        <button class="btn btn-secondary" @onclick="Cancel" style="padding: 14px 30px; font-size: 16px; background-color: #6c757d; color: white; border: none; border-radius: 8px; cursor: pointer; transition: background-color 0.3s;">
            No
        </button>
    </div>
</div>

@code {
    private void HandleLogout()
    {
        AuthenticationStateService.Logout();
        NavigationManager.NavigateTo("/");
        StateHasChanged();
    }

    private void Cancel()
    {
        NavigationManager.NavigateTo("/dashboard");
    }
}
