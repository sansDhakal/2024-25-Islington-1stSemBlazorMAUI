@using PersonalExpenseTracker.Services
@inject AuthenticationStateService AuthenticationStateService

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        @if (!AuthenticationStateService.IsAuthenticated())
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="">
                    <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="signup">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Signup
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="dashboard">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Dashboard
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="allTransactions">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> All Transactions
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="cashInflow">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add Cash Inflow
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="cashOutflow">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add Cash Outflow
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="debt">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Add Debt
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="logout">
                    <span class="bi bi-plus-square-fill-nav-menu" aria-hidden="true"></span> Logout
                </NavLink>
            </div>
        }

        
    </nav>
</div>


@code {
    protected override void OnInitialized()
    {
        AuthenticationStateService.OnStateChanged += StateHasChanged;
    }
}